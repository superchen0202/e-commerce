<!-- Show ERROR message if sheet content can't pass model validation -->
<% if category.errors.any? %>
    <div class="notification is-danger is-marginless" >
        <% category.errors.each do |error| %>
            <%= error.full_message %></br>
        <% end %>
    </div>
<% end %>


<%= form_with(model: [:admin, category ]) do |form| %>

    <div class="field">
        <%= form.label :name, "分類名稱", class: "label"  %>
        <%= form.text_field :name, class: 'input is-medium' %>
    </div>

    <hr>

    <% if category.created_at == nil %>
        <%= form.submit "新增分類", class: "button is-primary"  %>
    <% else %>
        <%= form.submit "更新分類", class: "button is-primary" %>
    <% end %>
 
<% end %>