<section class = "container">

  <div class="columns is-12">

    <!-- 8/12：圖 -->
    <div class="column is-8">
      <%= image_pack_tag "enroll/logo.jpg" %>
    </div>

    <!-- 4/12：登入欄位 -->
    <div class="column is-4">
        
      <h2 class="title is-9">登入</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
      <!-- 註冊信箱 -->
        <div class="field">
          <%= f.label :email, "信箱" ,class:"label" %>
          <%= f.email_field :email, autofocus: true, class:"input", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "密碼" ,class:"label" %>
          <%= f.password_field :password, class:"input", autocomplete: "current-password" %>
        </div>

        <!-- 記得用戶不登出 -->
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "記住帳密?" , class:"label" %>
          </div>
        <% end %>

        <!-- 登入 -->
        <div class="actions">
          <%= f.submit "登入", class:"button is-primary" %>
          <!-- <%= link_to "忘記密碼?", new_password_path(resource_name), class: "button is-danger" %> -->
        </div>
        
        <% end %>

        <hr>

        <%= render "devise/shared/links" %>
    </div>

  </div>

</section>